@model IEnumerable<COVID19TriC.Models.Person>

@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
}




<h2>People</h2>

<div class="wrapper">
    <div class="search-box">
        <form class="form-inline">
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    <p>
                        Last Name Search: @Html.TextBox("SearchString")&nbsp&nbsp
                        <input type="submit" value="Search" />
                    </p>
                }
            </div>
        </form>

    </div>
        <p>
        @Html.ActionLink("Create New Person Record", "Create") <br />

    </p>
    <div class="table-responsive">
        <table class="table create table-striped table-condensed table-hover">
            <tr>             
                <th>
                    S-Number
                </th>
                <th>
                    Last Name
                </th>            
                <th>
                    First Name
                </th>
                <th>
                    Middle Name
                </th>
                <th>
                    Personal Email
                </th>
                <th>
                    School Email
                </th>
                <th>
                    Phone Number
                </th>               
                <th>
                    Location
                </th>
                <th>
                    Department
                </th>              
                <th></th>
            </tr>

            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MiddleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PersonalEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SchoolEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.formattedPhoneNumber)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Location.LocationDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department.DepartmentDescription)
                        </td>
                        <td>
                            <ul style="list-style-type:none">
                                <li>
                                    @Html.ActionLink("Details", "Details", new { id = item.PersonID })
                                </li>
                                <li>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.PersonID })
                                </li>
                                <li>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.PersonID })
                                </li>
                            </ul>


                    </tr>
                }
            </tbody>
        </table>
    </div>  
</div>

