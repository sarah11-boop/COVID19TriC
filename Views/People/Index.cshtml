@model IEnumerable<COVID19TriC.Models.Person>

@{
    ViewBag.Title = "Index";
}

    


<body>
    <h2>People</h2>

    <p>
        Last Name Search: @Html.TextBox("SearchString")<input type="submit" value="Search"></br>
        @Html.ActionLink("Create New", "Create")
    </p>
    <!--class="table table-sm table-striped"-->
    <!--class="display"-->
    <table id="dynamicTable" class="table table-sm table-striped">
        <thead>
            <tr>
                <th>
                    S-Number
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Middle Name
                </th>
                <th>
                    Personal Email
                </th>
                <th>
                    School Email
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Location
                </th>
                <th>
                    Department
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MiddleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonalEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SchoolEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.formattedPhoneNumber)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Location.LocationDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.DepartmentDescription)
                    </td>
                    <td>
                        <ul style="list-style-type:none">
                            <li>
                                @Html.ActionLink("Details", "Details", new { id = item.PersonID })
                            </li>
                            <li>
                                @Html.ActionLink("Edit", "Edit", new { id = item.PersonID })
                            </li>
                            <li>
                                @Html.ActionLink("Delete", "Delete", new { id = item.PersonID })
                            </li>
                        </ul>
                        
                    
                </tr>
            </tbody>
        }

    </table>
</body>
